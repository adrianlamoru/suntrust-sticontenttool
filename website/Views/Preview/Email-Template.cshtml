@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="app">
<head>
    <meta http-equiv="Content-Type" content="text/html charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style type="text/css">

        .logo {
            width: 198px
        }

        body {
            font-size: 14px;
            color: #555555;
        }

        body, table, td, a, span, b, p, div {
            font-family: "Trebuchet MS", Helvetica, sans-serif;
        }

        .wrapper {
            background-color: #DCD9DC;
            max-width: 600px;
            padding: 20px;
            margin: 20px auto;
        }

        .main-content-wrapper,
        .bottom-cta-container {
            padding: 20px;
            font-size: 0;
        }

        .section {
            display: inline-table;
            vertical-align: bottom;
            margin: 0 0 10px 0;
        }

            .section.logo {
                width: 39%;
            }

            .section.links {
                width: 60%;
            }

            .section .logo-container {
                text-align: left;
            }

        .links-container {
            text-align: right;
            padding: 15px 20px 0 0;
        }

        .left-content {
            width: 100%;
        }

        .html-content {
            font-size: 14px;
        }

        .right-content tr td.right-content-wrapper .html-content.image-component {
            margin-top: 20px;
            text-align: left;
        }

        .right-content {
            width: 37%;
            padding-left: 5px;
        }

        .left-content.right-content-active {
            width: 63%;
            border-right: 1px solid #DCD9DC;
        }

        .right-content tr td.right-content-wrapper {
            padding-left: 5px;
            font-size: 14px;
        }

        .left-content.right-content-active tr td.left-content-wrapper {
            padding-right: 5px;
            font-size: 14px;
        }

        .left-content tr td.left-content-wrapper {
            font-size: 14px;
        }

        img {
            width: 100%;
            vertical-align: top;
        }

        .three-items .cta-links {
            width: calc(33.3% - 6px);
        }

        .three-items .cta-links:first-child {
            margin-right: 9px;
        }

        .three-items .cta-links:nth-child(2) {
            margin-right: 9px;
        }

        .two-items .cta-links {
            width: calc(50% - 5px);
        }

        .two-items .cta-links:first-child {
            margin-right: 10px;
        }

        .one-item .cta-links {
            width: 100%;
            margin: 0;
        }

        .cta-links span {
            word-break: break-all;
        }

        .right-content .cta-links {
            width: calc(100% - 18px);
            margin-bottom: 10px;
        }

        a, table, table tr, table tr td {
            vertical-align: top;
            border-collapse: collapse;
            margin: 0;
            padding: 0;
        }

        .disclaimer-container {
            padding: 20px;
        }

        .disclaimer-container a {
            text-decoration: underline;
            color: #428bca;
        }

        .header-content {
            display: none;
        }

        .header-content.default-height {
            display: table;
        }

        .header-text,
        .header-cta-container {
            width: 50%;
            height: 268px;
            vertical-align: middle;
        }

        .header-text {
            width: 60%;
            padding: 0 20px;
        }

        .header-text.hidden-desktop {
            display: none;
        }

        .header-cta-container {
            width: 40%;
        }

            .header-cta-container .apply-now {
                margin-top: 150px !important;
            }
        div.apply-center, .apply-center,
        div.apply-left, .apply-left,
        div.apply-right, .apply-right {
            display: block;
            margin: 10px 0;
            vertical-align: middle;
        }

        .apply-center {
            text-align: center;
        }

        .apply-left {
            text-align: left;
        }

        .apply-right {
            text-align: right;
        }

        div.apply-default, div.apply-NULL,
        .apply-default, .apply-NULL {
            display: inline-block;
            margin: 10px 0;
            vertical-align: middle;
            text-align: center;
        }
        /*--- Media Queries --*/
        @@media screen and (max-width: 520px) {
            .logo {
                width: 120px
            }

            .wrapper,
            .main-content-wrapper,
            .bottom-cta-container {
                padding: 10px;
            }

            .section.logo,
            .section.links {
                width: 100%;
            }

            .links-container,
            .section .logo-container {
                text-align: center;
                padding: 15px 0 0 0;
            }

            .left-content.right-content-active {
                width: 100%;
                border-right: 0;
            }

            .left-content.right-content-active tr td.left-content-wrapper {
                padding: 0 0 20px 0;
            }

            .right-content {
                border-top: 1px solid #DCD9DC;
                width: 100%;
            }

            .right-content tr td.right-content-wrapper {
                padding: 20px 0 0 0;
            }

            .cta-links {
                width: calc(100% - 20px);
                margin: 5px 0 !important;
            }

            .disclaimer-container {
                padding: 10px;
            }

            .one-item .cta-links,
            .two-items .cta-links,
            .three-items .cta-links {
                width: 100%;
                margin: 5px 0 !important;
            }

            .apply-now {
                display: block !important;
                text-align: center !important;
            }

            .apply-now.hidden {
                display: none !important;
            }

            .header-text,
            .header-cta-container {
                width: 100%;
                display: inline-table;
                height: 180px;
                text-align: center;
            }

            .header-text,
            .header-cta-container {
                text-align: left;
            }

            .header-cta-container {
                height: 60px;
                background-color: #FFFFFF !important;
                padding: 0 10px;
            }

            .header-cta-container .apply-now {
                margin-top: 20px !important;
            }

            .header-text.hidden-mobile,
            .header-cta-container.hidden-mobile {
                display: none;
            }

            .header-text.hidden-desktop {
                display: inline-table;
            }

            .header-text .header-left-content {
                padding-top: 20px;
            }

            div.apply-default, div.apply-NULL,
            .apply-default, .apply-NULL {
                display: block;
            }
        }
    </style>
    <title>Email Template</title>

    <script>
    var projectID = "@ViewBag.projectID";
    var project = JSON.parse(@Html.Raw(Json.Encode(@ViewBag.project)));

    var RELATIVE_PATH = '@System.Configuration.ConfigurationManager.AppSettings["RelativeAppPath"]';

    if (!window.location.origin) {
        window.location.origin = window.location.protocol + "//" + window.location.hostname + (window.location.port ? ':' + window.location.port : '');
    }

    var BASE_URL = window.location.origin;

    BASE_URL += RELATIVE_PATH;

    </script>
</head>
